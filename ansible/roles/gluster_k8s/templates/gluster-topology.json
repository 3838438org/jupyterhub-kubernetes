{
    "clusters": [
        {
            "nodes": [
                {% for host in groups['kube_nodes'] %}
                {
                    "node": {
                        "hostnames": {
                            "manage": [
                                "{{ host }}"
                            ],
                            "storage": [
                                "{{ hostvars[host]['ansible_' + cluster_interface].ipv4.address }}"
                            ]
                        },
                        "zone": 1
                    },
                    "devices": [
                        {% for disk in glusterfs_disks %}"{{ disk }}"{% if not loop.last %},{% endif %}{% endfor %}
                    ]
                }{% if not loop.last %},{% endif %}
                {% endfor %}
            ]
        }
    ]
}
